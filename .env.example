# Database Configuration
DATABASE_URL=your_database_url_here
PGHOST=your_pg_host
PGPORT=5432
PGUSER=your_pg_user
PGPASSWORD=your_pg_password
PGDATABASE=your_pg_database

# Session Configuration
SESSION_SECRET=your_session_secret_here

# Environment Configuration
NODE_ENV=development
# Optional: Override automatic environment detection
# DEVELOPMENT_URL=http://localhost:5000
# STAGING_URL=https://your-staging-domain.com
# PRODUCTION_URL=https://your-production-domain.com

# Microservices Configuration
# Enable microservices adapters for gradual migration
ENABLE_MICROSERVICES=false

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
# Environment-specific Google OAuth (optional)
# GOOGLE_CLIENT_ID_STAGING=your_staging_google_client_id
# GOOGLE_CLIENT_SECRET_STAGING=your_staging_google_client_secret
# GOOGLE_CLIENT_ID_PRODUCTION=your_production_google_client_id
# GOOGLE_CLIENT_SECRET_PRODUCTION=your_production_google_client_secret

# Facebook OAuth Configuration (optional)
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
# Environment-specific Facebook OAuth (optional)
# FACEBOOK_APP_ID_STAGING=your_staging_facebook_app_id
# FACEBOOK_APP_SECRET_STAGING=your_staging_facebook_app_secret
# FACEBOOK_APP_ID_PRODUCTION=your_production_facebook_app_id
# FACEBOOK_APP_SECRET_PRODUCTION=your_production_facebook_app_secret

# Microsoft OAuth Configuration (optional)
MICROSOFT_CLIENT_ID=your_microsoft_client_id
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret
# Environment-specific Microsoft OAuth (optional)
# MICROSOFT_CLIENT_ID_STAGING=your_staging_microsoft_client_id
# MICROSOFT_CLIENT_SECRET_STAGING=your_staging_microsoft_client_secret
# MICROSOFT_CLIENT_ID_PRODUCTION=your_production_microsoft_client_id
# MICROSOFT_CLIENT_SECRET_PRODUCTION=your_production_microsoft_client_secret

# OpenAI Configuration (for storytelling features)
OPENAI_API_KEY=your_openai_api_key

# Storage and Caching Configuration
CACHE_DIR=/path/to/cache/directory
# Environment-specific cache directories are automatically created
# Development: cache_dir/development
# Staging: cache_dir/staging  
# Production: cache_dir/production

# CDN Configuration (optional)
CDN_URL=https://your-cdn-domain.com
CDN_URL_STAGING=https://staging-cdn-domain.com
CDN_URL_PRODUCTION=https://production-cdn-domain.com

# AWS S3 Configuration (optional - for cloud storage)
AWS_S3_BUCKET=your-s3-bucket
AWS_S3_BUCKET_STAGING=your-staging-s3-bucket
AWS_S3_BUCKET_PRODUCTION=your-production-s3-bucket
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key