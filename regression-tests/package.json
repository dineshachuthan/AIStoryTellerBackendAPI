{
  "name": "storytelling-app-regression-tests",
  "version": "1.0.0",
  "description": "Comprehensive regression test suite for the storytelling application",
  "type": "module",
  "scripts": {
    "test": "node --test test/**/*.test.js",
    "test:watch": "node --test --watch test/**/*.test.js",
    "test:coverage": "c8 node --test test/**/*.test.js",
    "test:verbose": "node --test --reporter=spec test/**/*.test.js"
  },
  "devDependencies": {
    "c8": "^8.0.1"
  },
  "dependencies": {
    "node-fetch": "^3.3.2",
    "form-data": "^4.0.0"
  }
}