# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/storytelling_app

# Server Configuration
PORT=5000
NODE_ENV=development
SESSION_SECRET=your-session-secret-here

# External API Keys
OPENAI_API_KEY=your-openai-api-key
ELEVENLABS_API_KEY=your-elevenlabs-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# Email Provider Configuration (MailGun)
MAILGUN_API_KEY=your-mailgun-api-key
MAILGUN_DOMAIN=your-mailgun-domain
MAILGUN_FROM_EMAIL=noreply@yourdomain.com

# Email Provider Configuration (SendGrid - Fallback)
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# SMS Provider Configuration (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# SMS Provider Configuration (MessageBird - Fallback)
MESSAGEBIRD_API_KEY=your-messagebird-api-key
MESSAGEBIRD_FROM_NUMBER=+1234567890

# OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret

# Video Generation Providers
RUNWAYML_API_KEY=your-runwayml-api-key
PIKA_API_KEY=your-pika-api-key
LUMA_API_KEY=your-luma-api-key

# Payment Provider (Stripe)
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Storage Configuration
STORAGE_TYPE=local
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=104857600

# Cache Configuration
CACHE_DIR=./cache
CACHE_MAX_SIZE_MB=2000
CACHE_TTL_HOURS=24

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# JWT Configuration
JWT_SECRET=your-jwt-secret-here
JWT_EXPIRY=7d

# Feature Flags
ENABLE_MICROSERVICES=false
ENABLE_NOTIFICATION_SERVICE=true
ENABLE_ADMIN_DASHBOARD=true